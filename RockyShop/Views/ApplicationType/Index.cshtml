@model IEnumerable<RockyShop.Models.ApplicationType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Add Application type</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-outline-success">
                Create new ApplicationType
            </a>
            
        </div>
    </div>

    <br /> <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped w=100">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td class="w-50">@obj.Name</td>
                        
                        <td>
                            <div class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Category" asp-route-id="@obj.id" asp-action="Edit" class="btn btn-primary mx-2">Edit</a>
                                    <a asp-controller="Category" asp-route-id="@obj.id" asp-action="Delete" class="btn btn-danger mx-2">Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <p>No application type exists exists</p>
    }

</div>



